<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table class="table table-striped  table-hover">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Credit</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.credit %></td>
        <td><%= link_to 'Show', course , class: 'btn btn-mini btn-info'  %></td>
        <td><%= link_to 'Edit', edit_course_path(course), class: 'btn btn-mini btn-warning'  %></td>
        <td><%= link_to 'Destroy', course, method: :delete,class: 'btn btn-mini btn-danger' , data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>